<% include ../../partials/header.ejs %> <% include ../../partials/navbar.ejs %>
<% include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Kategori</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="/">Home</a></li>
						<li class="breadcrumb-item"><a href="/category">Nominal</a></li>
						<li class="breadcrumb-item active">Tambah</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-header">
							<h3 class="card-title">
								<a href="/category/create" class="btn btn-primary">
									<i class="nav-icon far fa-plus-square"></i>
									Tambah</a
								>
							</h3>
						</div>

						<div class="card-body">
							<div class="card card-primary">
								<div class="card-header">
									<h3 class="card-title">Form Tambah Nominal</h3>
								</div>
								<form action="/nominal/create" method="POST">
									<div class="card-body">
										<div class="form-group">
											<label>Nama Coin</label>
											<select
												class="form-control select"
												style="width: 100%"
												name="coinName">
												<option selected="selected">Pilih koin</option>
												<option value="Diamond">Diamond</option>
												<option value="Gold">Gold</option>
												<option value="Jewel">Jewel</option>
											</select>
										</div>
										<div class="form-group">
											<label for="coinQuantity">Jumlah koin</label>
											<input
												type="number"
												name="coinQuantity"
												class="form-control"
												id="coinQuantity"
												placeholder="Masukan jumlah koin" />
										</div>
										<div class="form-group">
											<label for="price">Harga</label>
											<input
												type="number"
												name="price"
												class="form-control"
												id="price"
												placeholder="Masukan harga" />
										</div>
									</div>
									<div class="card-footer">
										<button type="submit" class="btn btn-primary">
											Simpan
										</button>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>

<% include ../../partials/footer.ejs %> <% include ../../partials/js.ejs %>
