<% include ../../partials/header.ejs %> <% include ../../partials/navbar.ejs %>
<% include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Kategori</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="/">Home</a></li>
						<li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
						<li class="breadcrumb-item active">Ubah</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-header">
							<h3 class="card-title">
								<a href="/nominal/create" class="btn btn-primary">
									<i class="nav-icon far fa-plus-square"></i>
									Tambah</a
								>
							</h3>
						</div>

						<div class="card-body">
							<div class="card card-primary">
								<div class="card-header">
									<h3 class="card-title">
										Form Ubah Nominal
									</h3>
								</div>
								<form
									action="/nominal/edit/<%= nominal._id %>?_method=PUT"
									method="POST">
									<div class="card-body">
                    <div class="form-group">
											<label>Nama Coin</label>
											<select
												class="form-control select"
												style="width: 100%"
												name="coinName" >
												<option selected="selected">Pilih koin</option>
												<option value="Diamond"
                          <% if (nominal.coinName === "Diamond") { %>
                            selected
                          <% } %>
                        >Diamond</option>
												<option value="Gold"
                        <% if (nominal.coinName === "Gold") { %>
                          selected
                        <% } %>
                        >Gold</option>
												<option value="Jewel"  <% if (nominal.coinName === "Jewel") { %>
                          selected
                        <% } %>>Jewel</option>
											</select>
										</div>
										<div class="form-group">
											<label for="coinQuantity">Jumlah koin</label>
											<input
												type="number"
												value="<%= nominal.coinQuantity %>"
												name="coinQuantity"
												class="form-control"
												id="coinQuantity"
												placeholder="Masukkan jumlah koin"
												required />
										</div>
										<div class="form-group">
											<label for="price">Harga</label>
											<input
												type="number"
												value="<%= nominal.price %>"
												name="price"
												class="form-control"
												id="price"
												placeholder="Harga"
												required />
										</div>
									</div>
									<div class="card-footer">
										<button class="btn btn-primary">Simpan</button>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>

<% include ../../partials/footer.ejs %> <% include ../../partials/js.ejs %>
